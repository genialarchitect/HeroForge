# HeroForge Environment Configuration
# Copy this file to .env and fill in your values
# Required variables are marked with [REQUIRED]

# ==============================================================================
# CORE SETTINGS
# ==============================================================================

# [REQUIRED] JWT signing secret - generate with: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-change-in-production-minimum-32-chars

# Application base URL (used for email links, OAuth callbacks, etc.)
APP_BASE_URL=http://localhost:3000

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================================================
# DATABASE
# ==============================================================================

# SQLite database path
DATABASE_URL=./heroforge.db

# Database connection pool size (default: 5)
DB_POOL_SIZE=5

# [OPTIONAL] SQLCipher encryption key - enables AES-256 database encryption
# Generate with: openssl rand -base64 32
# DATABASE_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Set to "true" to require database encryption (fails if key not set)
REQUIRE_DB_ENCRYPTION=false

# Bcrypt password hashing cost factor (default: 12, range: 4-31)
BCRYPT_COST=12

# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# Username to automatically grant admin role on registration
# ADMIN_USERNAME=admin@example.com

# [OPTIONAL] TOTP/MFA encryption key for storing TOTP secrets
# Generate with: openssl rand -base64 32
# TOTP_ENCRYPTION_KEY=your-totp-encryption-key-here

# Portal authentication settings
# PORTAL_BASE_URL=https://portal.heroforge.io
# BASE_URL=https://heroforge.io

# ==============================================================================
# EMAIL / SMTP
# ==============================================================================

# SMTP server configuration for sending emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password

# Email sender information
SMTP_FROM_ADDRESS=noreply@heroforge.io
SMTP_FROM_NAME=HeroForge Security

# Sales team email for enterprise inquiry notifications
SALES_TEAM_EMAIL=sales@heroforge.io

# ==============================================================================
# STORAGE DIRECTORIES
# ==============================================================================

# Directory for generated reports
REPORTS_DIR=./reports

# Directory for compliance evidence files
EVIDENCE_DIR=./evidence

# Data lake storage path
DATA_LAKE_PATH=./data_lake

# Plugin data directory
HEROFORGE_DATA_DIR=./data

# Malware sample storage (should be isolated/sandboxed)
MALWARE_STORAGE_DIR=./malware_samples
MALWARE_STORAGE_PATH=./malware_samples

# [OPTIONAL] Encryption key for malware samples
# MALWARE_ENCRYPTION_KEY=your-malware-encryption-key

# Git repository clone directory (temporary)
GIT_CLONE_DIR=/tmp/heroforge_git

# Custom scripts directory for automation
HEROFORGE_SCRIPTS_DIR=./scripts

# ==============================================================================
# THREAT INTELLIGENCE APIs
# ==============================================================================

# Shodan API key (https://shodan.io)
# SHODAN_API_KEY=your-shodan-api-key

# NVD (National Vulnerability Database) API key
# Get one at: https://nvd.nist.gov/developers/request-an-api-key
# NVD_API_KEY=your-nvd-api-key

# Censys API credentials (https://censys.io)
# CENSYS_API_ID=your-censys-api-id
# CENSYS_API_SECRET=your-censys-api-secret

# Have I Been Pwned API key (https://haveibeenpwned.com/API/Key)
# HIBP_API_KEY=your-hibp-api-key

# DeHashed API credentials (https://dehashed.com)
# DEHASHED_EMAIL=your-dehashed-email
# DEHASHED_API_KEY=your-dehashed-api-key

# ==============================================================================
# AI / LLM
# ==============================================================================

# Anthropic API key for Claude integration
# Get one at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Claude model to use (default: claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# ==============================================================================
# CLOUD PROVIDERS
# ==============================================================================

# AWS credentials for cloud security scanning
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1

# Azure credentials for cloud security scanning
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret
# AZURE_TENANT_ID=your-azure-tenant-id
# AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
# AZURE_RESOURCE_GROUP=your-resource-group

# GCP credentials for cloud security scanning
# Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GCP_PROJECT_ID=your-gcp-project-id

# ==============================================================================
# SIEM INTEGRATION
# ==============================================================================

# Generic SIEM settings
SIEM_TYPE=syslog
SIEM_ENDPOINT=siem.example.com:514
# SIEM_API_KEY=your-siem-api-key

# Microsoft Sentinel (Azure)
# SENTINEL_WORKSPACE_ID=your-workspace-id
# SENTINEL_SHARED_KEY=your-shared-key
# SENTINEL_LOG_TYPE=HeroForge
# SENTINEL_RESOURCE_GROUP=your-resource-group
# SENTINEL_WORKSPACE_NAME=your-workspace-name

# Google Chronicle
# CHRONICLE_CUSTOMER_ID=your-chronicle-customer-id

# ==============================================================================
# VPN CONFIGURATION
# ==============================================================================

# VPN configuration directory
VPN_CONFIGS_DIR=./vpn_configs

# VPN connection timeout in seconds
VPN_CONNECTION_TIMEOUT=30

# [OPTIONAL] VPN credential encryption key
# VPN_ENCRYPTION_KEY=your-vpn-encryption-key

# ==============================================================================
# CACHE (Redis)
# ==============================================================================

# Redis URL for caching (optional - improves performance)
# REDIS_URL=redis://localhost:6379

# ==============================================================================
# CUSTOM SANDBOX
# ==============================================================================

# Custom malware analysis sandbox endpoint
# HEROFORGE_CUSTOM_SANDBOX_URL=https://sandbox.example.com
# HEROFORGE_CUSTOM_SANDBOX_KEY=your-sandbox-api-key

# ==============================================================================
# BACKUP
# ==============================================================================

# GPG passphrase for encrypted database backups
# BACKUP_GPG_PASSPHRASE=your-backup-passphrase

# ==============================================================================
# SSO / OAUTH
# ==============================================================================

# SAML Identity Provider metadata URL
# SAML_IDP_METADATA_URL=https://idp.example.com/metadata

# OAuth 2.0 / OpenID Connect credentials
# OAUTH_CLIENT_ID=your-oauth-client-id
# OAUTH_CLIENT_SECRET=your-oauth-client-secret
